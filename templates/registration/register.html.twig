{% extends 'base.html.twig' %}

{% block title %}S'enregistrer
{% endblock %}

{% block body %}
	<div class="container">
		<h1>S'enregistrer</h1>

		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.username) }}
		{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
		{{ form_row(registrationForm.agreeTerms, {
      label: "J'accepte les termes"
    }) }}

		<button type="submit" class="btn" style="background: #F56B2A;color:white">S'enregistrer</button>
		{{ form_end(registrationForm) }}</div>
{% endblock %}
